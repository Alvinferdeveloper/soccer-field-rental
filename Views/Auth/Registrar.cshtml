@model proyectoCanchas.Models.User;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario Estilizado</title>
    <!-- Incluye el CSS de Flowbite y Tailwind CSS -->

    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .form-container {
            background: #f9fafb;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-input {
            border-color: #d1d5db;
            border-radius: 0.375rem;
        }

        .form-input:focus {
            border-color: #2563eb;
            outline: none;
            box-shadow: 0 0 0 1px #2563eb;
        }

        .btn-primary {
            background-color: #2563eb;
            color: #ffffff;
        }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

        .hidden {
            display: none;
        }

        .hover:bg-blue-200 {
            background-color: #e0f7ff;
        }

        .selected {
            background-color: #4caf50;
            color: white;
        }

        .datepicker-picker {
            background-color: black !important;
        }

        .datepicker-header {
            background-color: black !important;
            color: black !important;
        }

        .datepicker-controls button {
            background: black !important;
            ;
        }
    </style>
</head>

<body class="">
    <div class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
        <div class="form-container p-6 max-w-lg w-full">
            <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Registro de Usuario</h1>
            <form asp-action="guardarUsuario" method="post">
                <!-- Campo para nombres -->
                <div class="mb-4">
                    <label for="nombres" class="block text-sm font-medium text-gray-700 mb-1">Nombres</label>
                    <input type="text" id="nombres" name="nombres" asp-for="Name"
                        class="form-input mt-1 block w-full px-3 py-2" placeholder="Ingrese sus nombres" required>
                </div>

                <!-- Campo para apellidos -->
                <div class="mb-4">
                    <label for="apellidos" class="block text-sm font-medium text-gray-700 mb-1">Apellidos</label>
                    <input type="text" id="apellidos" name="apellidos" asp-for="LastName"
                        class="form-input mt-1 block w-full px-3 py-2" placeholder="Ingrese sus apellidos" required>
                </div>

                <!-- Campo para email -->
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input type="email" id="email" name="email" asp-for="Email"
                        class="form-input mt-1 block w-full px-3 py-2" placeholder="Ingrese su email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input type="password" id="password" name="password" asp-for="Password"
                        class="form-input mt-1 block w-full px-3 py-2" placeholder="Ingrese su email" required>
                </div>

                <!-- Campo para fecha de nacimiento -->
                <div class="relative max-w-sm mb-8">
                    <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                        <svg class="w-4 h-4 text-gray-500 text-gray-400" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                        </svg>
                    </div>
                    <input id="datepicker-format" datepicker datepicker-format="yyyy-mm-dd" type="datetime"
                        asp-for="Birthday"
                        value="2005-08-07"
                        name="fechaNacimiento"
                        class="bg-black-500 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        placeholder="Fecha de nacimiento">
                </div>


                <!-- Botón de envío -->
                <div class="mb-4">
                    <button type="submit"
                        class="btn-primary w-full py-2 px-4 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                        Enviar
                    </button>
                </div>

            </form>
        </div>

    </div>

    <!-- Incluye el JS de Flowbite -->
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
</body>

</html>