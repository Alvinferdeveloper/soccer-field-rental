@model proyectoCanchas.Models.LoginModel;
@{

    Layout = null;
    var credentialsError = ViewBag.credentialsError;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="styles.css">
</head>
<style>
    /* Estilo general para el cuerpo */
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Contenedor principal */
    .container-login {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Título del formulario */
    .container-login h2 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #333;
    }

    /* Estilo para el formulario */
    .container-login form {
        display: flex;
        flex-direction: column;
    }

    /* Estilo para las etiquetas de los campos */
    .container-login label {
        margin-bottom: 0.5rem;
        font-weight: bold;
        color: #555;
    }

    /* Estilo para los campos de entrada */
    .container-login input[type="email"],
    .container-login input[type="password"] {
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
    }

    .container-login input[type="email"] {
        margin-left: 50px;
    }

    .container-login input[type="password"] {
        margin-left: 20px;
        margin-top: 20px;
    }

    /* Estilo para el botón de envío */
    .container-login button {
        padding: 0.75rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        margin-top: 20px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    /* Cambio de color del botón al pasar el ratón por encima */
    .container-login button:hover {
        background-color: #0056b3;
    }

    /* Estilo para los mensajes de validación */
    .container-login .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-left: 100px;
        margin-bottom: -5px;
    }

    /* Pie del contenedor con un pequeño texto */
    .container-login .card-footer {
        text-align: center;
        margin-top: 1rem;
    }

    .container-login .card-footer a {
        color: #007bff;
        text-decoration: none;
    }

    .container-login .card-footer a:hover {
        text-decoration: underline;
    }
</style>

<body>
    <div class="container-login">
        <h2>Login</h2>
        <form asp-action="Login" asp-controller="Auth" method="post">
            @if (credentialsError != null)
            {
                <div class="" style="color: red; margin-left: 100px; margin-bottom: 10px;">
                    Credenciales Incorrectas
                </div>
            }
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="Email" asp-for="Email" required>
                <br>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="Password" asp-for="Password" required>
                <br>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <button type="submit">Login</button>
            
        </form>
        <div class="card-footer">
            <small class="text-muted">No tienes una cuenta? <a href="/Auth/Registrar">Registrate aqui</a></small>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
