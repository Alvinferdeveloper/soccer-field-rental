<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - proyectoCanchas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proyectoCanchas.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 flex justify-evenly h-[50px]">
            <div class="">
                Nombre de la app
            </div>
            <nav class=" w-[60%]">
                <ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class=" flex justify-evenly">
                        <li>Bienvenido, @User.Identity.Name!</li>
                         <li><a href="/reserva/Buscar">Buscar reserva</a></li>
                          <li><a href="/reserva/MisReservas">Obtener mis reservas </a></li>
                        <li><a href="/Auth/Logout">Logout</a></li>  
                        <li><a href="/Home/index">Reservar</a></li>
                        @if(User.IsInRole("ADMIN")){
                            <li><a href="/Admin/Dashboard">Dashboard</a></li>
                        }
                        </div>
                    }
                    else
                    {
                        <div class=" flex justify-evenly">
                            <li><a href="/Auth/index">Login</a></li>
                            <li><a href="/reserva/Buscar">Buscar reserva</a></li>
                            <li><a href="/Home/index">Reservar</a></li>
                        </div>
                    }
                </ul>
            </nav>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
